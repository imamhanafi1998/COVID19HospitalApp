<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.hospital.HospitalDetailActivity"
    tools:showIn="@layout/activity_hospital_detail">

    <ImageView
        android:id="@+id/hospitalPhotoDetail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="72dp"
        android:layout_marginTop="32dp"
        app:layout_constraintDimensionRatio="H, 1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/hospitalNameDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RS Dr. Soetomo"
        app:layout_constraintTop_toBottomOf="@id/hospitalPhotoDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="32dp"
        android:textSize="18sp"
        android:ellipsize="end"
        android:maxLines="2" />

    <TextView
        android:id="@+id/hospitalAddressDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kota Surabaya"
        app:layout_constraintTop_toBottomOf="@id/hospitalNameDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="16dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/hospitalContactDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="03131319090"
        app:layout_constraintTop_toBottomOf="@id/hospitalAddressDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="16dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/hospitalWebDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kota Surabaya"
        app:layout_constraintTop_toBottomOf="@id/hospitalContactDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="16dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/hospitalMapDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="123-321"
        app:layout_constraintTop_toBottomOf="@id/hospitalWebDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="16dp"
        android:textSize="18sp" />

</androidx.constraintlayout.widget.ConstraintLayout>